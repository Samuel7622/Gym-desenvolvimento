 <script>
        // ========== SISTEMA DE PERFIL ==========
        
        // Verificar login ao carregar
        console.log('🔍 VERIFICANDO LOGIN...');
        const userData = localStorage.getItem('currentUser') || 
                         localStorage.getItem('gymp2_current_user') ||
                         sessionStorage.getItem('gymp2_user');

        if (!userData) {
            console.log('❌ Nenhum usuário logado encontrado');
            alert('Você precisa fazer login para acessar esta página!');
            setTimeout(() => {
                window.location.href = 'login-gym.html';
            }, 1000);
        }

        // ========== FUNÇÕES PRINCIPAIS ==========
        
        function getCurrentUser() {
            try {
                // Tentar múltiplas fontes de dados
                const sources = [
                    localStorage.getItem('currentUser'),
                    localStorage.getItem('gymp2_current_user'),
                    sessionStorage.getItem('gymp2_user'),
                    localStorage.getItem('login_data')
                ];

                for (const source of sources) {
                    if (source) {
                        const user = JSON.parse(source);
                        if (user && (user.name || user.nome || user.email || user.usuario)) {
                            console.log('✅ Usuário encontrado:', user.name || user.nome);
                            return {
                                name: user.name || user.nome || 'Usuário',
                                email: user.email || user.usuario || 'email@exemplo.com',
                                created_at: user.criado_em || user.created_at || user.createdAt || new Date().toISOString(),
                                last_login: user.ultimo_login || user.last_login || user.lastLogin || new Date().toISOString(),
                                role: user.role || 'user'
                            };
                        }
                    }
                }
            } catch (error) {
                console.error('❌ Erro ao processar dados do usuário:', error);
            }
            
            return null;
        }

        function formatDate(dateString) {
            try {
                if (!dateString) return 'Data não disponível';
                const date = new Date(dateString);
                return date.toLocaleDateString('pt-BR', {
                    day: '2-digit',
                    month: 'long',
                    year: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });
            } catch (e) {
                return 'Data inválida';
            }
        }

        function formatShortDate(dateString) {
            try {
                if (!dateString) return 'N/A';
                const date = new Date(dateString);
                return date.toLocaleDateString('pt-BR');
            } catch (e) {
                return 'N/A';
            }
        }

        function getInitials(name) {
            if (!name) return 'U';
            return name
                .split(' ')
                .map(n => n[0])
                .slice(0, 2)
                .join('')
                .toUpperCase();
        }

        function loadUserStats() {
            let stats = JSON.parse(localStorage.getItem('userStats'));
            
            if (!stats) {
                // Dados iniciais simulados
                stats = {
                    workouts: Math.floor(Math.random() * 50) + 10,
                    activeDays: Math.floor(Math.random() * 30) + 5,
                    goals: Math.floor(Math.random() * 50) + 30,
                    streak: Math.floor(Math.random() * 15) + 1
                };
                localStorage.setItem('userStats', JSON.stringify(stats));
            }

            // Atualizar interface
            document.getElementById('statsWorkouts').textContent = stats.workouts;
            document.getElementById('statsDays').textContent = stats.activeDays;
            document.getElementById('statsGoals').textContent = `${stats.goals}%`;
            document.getElementById('streak').innerHTML = `🔥 ${stats.streak}`;
        }

        function loadRecentActivity() {
            const activities = [
                {
                    icon: 'fas fa-dumbbell',
                    title: 'TREINO DE COSTAS REALIZADO',
                    description: 'Academia Smart Strong • 60 minutos • Alta intensidade',
                    time: 'Hoje, 18:30'
                },
                {
                    icon: 'fas fa-user-check',
                    title: 'CHECK-IN DIÁRIO',
                    description: 'Sequência de 7 dias mantida • Recompensa obtida',
                    time: 'Hoje, 08:15'
                },
                {
                    icon: 'fas fa-medal',
                    title: 'META ATINGIDA',
                    description: '15.000 passos diários • Novo recorde pessoal',
                    time: 'Ontem, 21:45'
                },
                {
                    icon: 'fas fa-heart',
                    title: 'MONITORAMENTO CARDÍACO',
                    description: 'Média de 125 bpm durante treino • Ótima performance',
                    time: 'Ontem, 19:20'
                },
                {
                    icon: 'fas fa-calendar',
                    title: 'AGENDAMENTO CONFIRMADO',
                    description: 'Aula de Spinning • 20/12 • 19:00h',
                    time: '2 dias atrás'
                }
            ];

            const activityList = document.getElementById('activityList');
            activityList.innerHTML = '';

            activities.forEach(activity => {
                const item = document.createElement('div');
                item.className = 'activity-item';
                item.innerHTML = `
                    <div class="activity-icon">
                        <i class="${activity.icon}"></i>
                    </div>
                    <div class="activity-content">
                        <h3>${activity.title}</h3>
                        <p>${activity.description}</p>
                    </div>
                    <div class="activity-time">${activity.time}</div>
                `;
                activityList.appendChild(item);
            });
        }

        function refreshActivity() {
            const activityList = document.getElementById('activityList');
            activityList.style.opacity = '0.5';
            
            setTimeout(() => {
                loadRecentActivity();
                activityList.style.opacity = '1';
                
                // Mostrar notificação
                showNotification('Atividade atualizada com sucesso!', 'success');
            }, 800);
        }

        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                padding: 15px 25px;
                background: ${type === 'success' ? '#00ff88' : '#ff4444'};
                color: #000;
                border-radius: 12px;
                font-weight: 700;
                box-shadow: 0 10px 30px rgba(0,0,0,0.3);
                z-index: 10000;
                animation: slideIn 0.3s ease;
            `;
            
            notification.textContent = message;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.style.animation = 'slideOut 0.3s ease';
                setTimeout(() => notification.remove(), 300);
            }, 3000);
            
            // Adicionar animações CSS
            const style = document.createElement('style');
            style.textContent = `
                @keyframes slideIn {
                    from { transform: translateX(100%); opacity: 0; }
                    to { transform: translateX(0); opacity: 1; }
                }
                @keyframes slideOut {
                    from { transform: translateX(0); opacity: 1; }
                    to { transform: translateX(100%); opacity: 0; }
                }
            `;
            document.head.appendChild(style);
        }

        function editProfile() {
            showNotification('Redirecionando para edição de perfil...', 'success');
            setTimeout(() => {
                window.location.href = 'editarperfil.html';
            }, 1000);
        }

        function toggleTheme() {
            const body = document.body;
            const isLight = body.classList.contains('light-mode');
            
            if (isLight) {
                body.classList.remove('light-mode');
                localStorage.setItem('gymp2_theme', 'dark');
            } else {
                body.classList.add('light-mode');
                localStorage.setItem('gymp2_theme', 'light');
            }
            
            showNotification(`Tema ${isLight ? 'escuro' : 'claro'} ativado!`, 'success');
        }

        function logout() {
            if (confirm('Tem certeza que deseja sair da sua conta?')) {
                // Limpar dados
                localStorage.removeItem('currentUser');
                localStorage.removeItem('gymp2_current_user');
                localStorage.removeItem('userStats');
                sessionStorage.clear();
                
                showNotification('Logout realizado com sucesso!', 'success');
                
                setTimeout(() => {
                    window.location.href = 'Menu-inicial-sem-logar.html';
                }, 1500);
            }
        }

        function goBack() {
            window.history.back();
        }

        // ========== INICIALIZAÇÃO ==========
        
        function initializeProfile() {
            const user = getCurrentUser();
            
            if (!user) {
                document.querySelector('.loading-text').textContent = 'REDIRECIONANDO PARA LOGIN...';
                setTimeout(() => {
                    window.location.href = 'login-gym.html';
                }, 2000);
                return;
            }

            // Preencher dados do usuário
            document.getElementById('userName').textContent = user.name;
            document.getElementById('userEmail').textContent = user.email;
            document.getElementById('memberSince').textContent = formatShortDate(user.created_at);
            document.getElementById('lastLogin').textContent = formatDate(user.last_login);
            
            // Configurar avatar
            const avatarEl = document.getElementById('profileAvatar');
            const initials = getInitials(user.name);
            
            const savedPhoto = localStorage.getItem('userProfilePhoto');
            if (savedPhoto) {
                avatarEl.innerHTML = `<img src="${savedPhoto}" alt="${user.name}" 
                    onerror="this.onerror=null; this.parentElement.innerHTML='<div class=\'avatar-initials\'>${initials}</div>'">`;
            } else {
                avatarEl.innerHTML = `<div class="avatar-initials">${initials}</div>`;
            }

            // Carregar estatísticas e atividades
            loadUserStats();
            loadRecentActivity();

            // Esconder loading e mostrar conteúdo
            setTimeout(() => {
                document.getElementById('loadingOverlay').style.opacity = '0';
                setTimeout(() => {
                    document.getElementById('loadingOverlay').style.display = 'none';
                }, 500);
            }, 1000);
        }

        // Aplicar tema salvo
        function applyTheme() {
            const savedTheme = localStorage.getItem('gymp2_theme');
            if (savedTheme === 'light') {
                document.body.classList.add('light-mode');
            }
        }

        // Inicializar quando a página carregar
        document.addEventListener('DOMContentLoaded', () => {
            console.log('📄 Página de perfil carregada');
            applyTheme();
            initializeProfile();
        });
</script>
</body>
</html>
