<!-- ADICIONE ISTO ANTES DO </body> NA P√ÅGINA DA REDE FIT -->

<!--JavaScript para aplicar configura√ß√µes globais-->
<script>
    // Aplicar configura√ß√µes globais - PARA TODAS AS P√ÅGINAS
    document.addEventListener('DOMContentLoaded', function() {
        console.log('üîß Aplicando configura√ß√µes globais na Rede Fit...');
        applyGlobalSettings();
        
        // Verificar se as configura√ß√µes foram aplicadas
        setTimeout(() => {
            console.log('‚úÖ Configura√ß√µes aplicadas:', {
                tema: localStorage.getItem('gym-theme'),
                fonte: localStorage.getItem('gym-fontSize'),
                bodyClass: document.body.className
            });
        }, 500);
    });

    function applyGlobalSettings() {
        // Carregar configura√ß√µes salvas
        const savedTheme = localStorage.getItem('gym-theme') || 'dark';
        const savedFontSize = localStorage.getItem('gym-fontSize') || 'medium';
        
        console.log('üìã Configura√ß√µes carregadas:', { savedTheme, savedFontSize });
        
        // Aplicar tema
        if (savedTheme === 'light') {
            document.body.classList.add('light-mode');
            console.log('üåô Modo claro aplicado');
        } else {
            document.body.classList.remove('light-mode');
            console.log('üåô Modo escuro aplicado');
        }
        
        // Aplicar tamanho da fonte
        applyFontSize(savedFontSize);
    }

    function applyFontSize(size) {
        const sizes = {
            'small': { 
                h1: '32px', h2: '24px', h3: '18px',
                normal: '14px', small: '12px',
                button: '14px'
            },
            'medium': { 
                h1: '42px', h2: '28px', h3: '22px',
                normal: '16px', small: '14px',
                button: '16px'
            },
            'large': { 
                h1: '52px', h2: '32px', h3: '26px',
                normal: '18px', small: '16px',
                button: '18px'
            }
        };

        const currentSizes = sizes[size];
        
        console.log('üìù Aplicando tamanho de fonte:', size, currentSizes);
        
        // Aplicar a todos os elementos
        setTimeout(() => {
            // T√≠tulos principais
            document.querySelectorAll('h1').forEach(el => {
                el.style.fontSize = currentSizes.h1;
            });
            
            // T√≠tulos secund√°rios
            document.querySelectorAll('h2').forEach(el => {
                el.style.fontSize = currentSizes.h2;
            });
            
            // T√≠tulos terci√°rios
            document.querySelectorAll('h3').forEach(el => {
                el.style.fontSize = currentSizes.h3;
            });
            
            // Textos normais
            document.querySelectorAll('p, .setting-description, .feedback-text, .nav-link, .result-title, .profile-info p, .feedback-text').forEach(el => {
                el.style.fontSize = currentSizes.normal;
            });
            
            // Bot√µes
            document.querySelectorAll('.gym-access-btn, .edit-profile-btn, .menu-search-btn').forEach(el => {
                el.style.fontSize = currentSizes.button;
            });
            
            // Textos pequenos
            document.querySelectorAll('.feedback-date, .setting-description, small, .result-description, .feedback-date').forEach(el => {
                el.style.fontSize = currentSizes.small;
            });
            
            // Estat√≠sticas
            document.querySelectorAll('.stat-box p').forEach(el => {
                el.style.fontSize = currentSizes.h2;
            });
            
            document.querySelectorAll('.stat-box h3').forEach(el => {
                el.style.fontSize = currentSizes.normal;
            });

            console.log('‚úÖ Tamanhos de fonte aplicados com sucesso');
        }, 100);
    }

    // Fun√ß√£o para for√ßar atualiza√ß√£o (√∫til para debugging)
    function forceUpdateSettings() {
        console.log('üîÑ For√ßando atualiza√ß√£o das configura√ß√µes...');
        applyGlobalSettings();
    }

    // Adicionar listener para mudan√ßas no localStorage (sincronizar entre abas)
    window.addEventListener('storage', function(e) {
        if (e.key === 'gym-theme' || e.key === 'gym-fontSize') {
            console.log('üîÑ Configura√ß√µes alteradas em outra aba, aplicando...');
            applyGlobalSettings();
        }
    });
</script>
